{
  "compilerOptions": {
    "target": "es5",
    "rootDir": "./source",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",

    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "lib": ["es6"]
  }
}
